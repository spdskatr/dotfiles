#keystate_capslock = enable



"xbindkeys_show"
   control+shift + q

#Volume down
"pamixer -ud 5"
    m:0x0 + c:122
    XF86AudioLowerVolume 

#Volume up
"pamixer -ui 5"
    m:0x0 + c:123
    XF86AudioRaiseVolume 

#Toggle mute
"pactl set-sink-mute 0 toggle"
    m:0x0 + c:121
    XF86AudioMute 

#Brightness up
"xbacklight + 5"
    m:0x0 + c:233
    XF86MonBrightnessUp 

#Brightness down
"xbacklight - 5"
    m:0x0 + c:232
    XF86MonBrightnessDown 

#Play/Pause
"mpc toggle"
    m:0x0 + c:172
    XF86AudioPlay 

#Previous Song
"mpc prev"
    m:0x0 + c:173
    XF86AudioPrev 

#Next Song
"mpc next"
    m:0x0 + c:171
    XF86AudioNext 

#Terminal
"i3-sensible-terminal"
    m:0x8 + c:36
    Alt + Return 

#dmenu_run
"rofi -show run"
    m:0x8 + c:40
    Alt + d 

