#!/bin/bash

# Simple mpd status script using mpc
#
# - Spd

echo "/usr/share/icons/Papirus/32x32/apps/gnome-music.svg"
TEST="$(mpc -qf "%artist% - %title%" current)"
if [[ $TEST == "" ]]; then
    echo "Not playing"
else
    if [[ $TEST == " - " ]]; then
        TEXT=$(basename "$(mpc -qf "%file%" current)")
    else
        TEXT=$TEST
    fi

    if [[ ${#TEXT} -gt 35 ]]; then
        CUT=$(echo $TEXT | cut -c 1-32)
        echo "$CUT..."
    else
        echo $TEXT
    fi
fi
